# ===================================
# CONFIGURACIÓN BASE DEL SISTEMA
# ===================================

# Express Server
PORT=3000
NODE_ENV=development

# ===================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===================================

DATABASE_URL=postgresql://postgres:postgres@inventario_db:5432/inventario
DB_HOST=inventario_db
DB_PORT=5432
DB_NAME=inventario
DB_USER=postgres
DB_PASSWORD=postgres

# ===================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ===================================

# JWT Secret - CAMBIAR EN PRODUCCIÓN
JWT_SECRET=tu_secreto_jwt_super_seguro_aqui_2024

# Session Secret - CAMBIAR EN PRODUCCIÓN
SESSION_SECRET=tu_secreto_sesion_super_seguro_aqui_2024

# ===================================
# CONFIGURACIÓN DE OAUTH2 (Google)
# ===================================

# Obtener en: https://console.cloud.google.com
GOOGLE_CLIENT_ID=tu_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ===================================
# CONFIGURACIÓN DE CARGA DE ARCHIVOS
# ===================================

# Directorio de carga
UPLOAD_DIR=public/uploads

# Tamaño máximo de archivo (en bytes)
# 5MB = 5242880 bytes
MAX_FILE_SIZE=5242880

# Tipos MIME permitidos (separados por coma)
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ===================================
# CONFIGURACIÓN DE PDF Y REPORTES
# ===================================

# Formato de página para PDFs
PDF_PAGE_SIZE=A4

# Márgenes en PDF (en puntos)
PDF_MARGIN=40

# ===================================
# CONFIGURACIÓN DE CÓDIGOS QR
# ===================================

# Nivel de corrección de error QR
# L: 7%, M: 15%, Q: 25%, H: 30%
QR_ERROR_CORRECTION=M

# Tipo de imagen QR (image/png, image/jpeg)
QR_IMAGE_TYPE=image/png

# ===================================
# LOGGING Y DEBUGGING
# ===================================

# Nivel de log: debug, info, warn, error
LOG_LEVEL=info

# Habilitar logging detallado
DEBUG=false

# ===================================
# CONFIGURACIÓN DE EMAILS (Opcional)
# ===================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_app
SMTP_FROM=noreply@inventario-app.com

# ===================================
# CONFIGURACIÓN DE SEGURIDAD
# ===================================

# CORS Origins permitidos
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Habilitar HTTPS
HTTPS=false

# ===================================
# CONFIGURACIÓN DE CACHÉ
# ===================================

# Tiempo de caché (en minutos)
CACHE_TTL=60

# Habilitar caché
CACHE_ENABLED=true

# ===================================
# CONFIGURACIÓN DE DONINIO/URL
# ===================================

# URL base de la aplicación
APP_URL=http://localhost:3000

# URL de API (si está separada)
API_URL=http://localhost:3000/api
